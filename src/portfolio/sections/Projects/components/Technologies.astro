---
const { tags } = Astro.props

const technologies = [
  tags.HTML,
  tags.CSS,
  tags.JAVASCRIPT,
  tags.TYPESCRIPT,
  tags.REACT,
  tags.NEXTJS,
  tags.ASTRO,
  tags.GIT,
  tags.NEXTUI,
  tags.MATERIALUI,
  tags.TAILWIND,
]
---

<article id="technologies" >
  <h1 data-section="projects" data-value="technologies">Tegnologias</h1>
  <div class="tags">
    {technologies.map(tag => (
        <li><tag.icon /></li>
    ))}
</div>
</article>

<style>
  #technologies {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-bottom: 100px;
  }
  h1 {
    font-size: min(4vw, 30px);
    margin: 6vw 0 1.5em 0;
    padding: 8px 15px;
    color: #FFF7ED;
    text-shadow: 0px 0px 4px #FFF7ED;
    font-weight: 300;
    border-radius: 12px;
    backdrop-filter: blur(2px);
		box-shadow: 0px 0px 20px 0px #fff7ed8e;
  }
  .tags {
		display: flex;
    justify-content: center;
    align-items: center;
		gap: 10px;
    width: min(90vw, 900px);
    flex-wrap: wrap;
	}
  li {
    width: min(20vw, 110px);
    height: min(16.667vw, 88px);
    display: flex;
    align-items: center;
    font-weight: 500;
    padding: min(3vw, 15px);
    color: #141414;
    background-color: #fff7ed6e;
    border-radius: 8px;
    border: 1px solid #FFF7ED;
	}
</style>