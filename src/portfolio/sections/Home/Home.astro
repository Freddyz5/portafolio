---
import Logo from './components/Logo.astro';
---

<section class="home" id="home">
    <Logo />
    <article>
        <h1>FREDDY TACURI</h1>
        <h2 data-section="home" data-value="subTitle" >FRONT-END DEVELOPER</h2>
        <a class="button" href="#contact"><p data-section="home" data-value="button">Contact me!</p></a>
    </article>
</section>

<style>
    .home{
        width: 100%;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        gap: 1.5em;
    }
    article {
        width: 80vw;
        max-width: 500px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    h1{
        font-size: clamp(1.5em, 8vw, 2.5em);
        margin-bottom: -5px;
    }
    h2{
        font-size: clamp(0.5em, 4vw, 1.25em);
        font-weight: 400;
    }
    .button {
        width: fit-content;
        color: #FFF7ED;
        text-decoration: none;
        margin: 2em;
        padding: 1px;
        border-radius: 8px;
        background: linear-gradient(90deg, #25E5EB 0%, #C01522 100%);
        box-shadow: 5px 20px 40px 0px rgba(192, 21, 34, 0.50);
        transition: .3s;
    }
    p {
        background-color: #090909;
        border-radius: 8px;
        padding: 0.4em 0.8em;
        transition: .3s;
        font-size: clamp(1em, 4vw, 1.25em);
    }
    .button:hover p {
        background-color: #090909BF;
        transition: .3s;
    }
    .button:hover {
        scale: 1.05;
        transition: .3s;
    }
    @media (width <= 900px){
        .home{
            flex-direction: column;
        }
    }
</style>