---
interface Props {
	title: string;
	body: string;
	href: string;
	src: string;
}

const { href, src, title, body } = Astro.props;
---
<a class="card" href={href}>
	<img src={src}/>
	<h2>{title}</h2>
	<p>{body}</p>
</a>

<style>
	.card {
		display: flex;
		flex-direction: column;
		justify-content: start;
		align-items: flex-start;
		text-decoration: none;
		color: #FFF7ED;
		padding: 1.2em 0.8em;
		border-radius: 15px;
		border: 1px solid #FFF7ED;
		background: #090909;
		width: 360px;
		height: 485px;
		/* width: 300px; el tamaño de la card un poco mas pequeña
		height: 390px; */
		filter: grayscale(50%);
		transition: .3s;
	}
	img {
		align-self: center;
		width: 320px;
		height: 250px;	
		border-radius: 10px;
	}
	h2 {
		padding: 0.8em 0;
		font-size: 25px;
		font-weight: 800;
		line-height: 32px; /* 128% */
		letter-spacing: -0.8px;
	}
	p {
		font-size: 15px;
		font-weight: 400;
		line-height: 21px; /* 140% */
		letter-spacing: -0.14px;
	}
	.card:hover {
		border: 1px solid #40A8AF;
		box-shadow: 0px 0px 20px 0px rgba(24, 65, 67, 0.75);
		filter: grayscale(0);
		scale: 1.01;
		transition: .3s;
	}
	
</style>
